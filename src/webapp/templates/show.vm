<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>${layout.title}</title>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
    ${h.css('bootstrap.min.css')}
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="images/favicon.ico">
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">

    <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">
  </head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">

            <span class="i-bar"></span>
            <span class="i-bar"></span>
            <span class="i-bar"></span>
          </a>
          <a class="brand" href="#">${layout.title}</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><a href="#">Home</a></li>

              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">

      <h1>${layout.title}</h1>
#if("$!{layout.title}" != "")
      <p>
      	${layout.description}
      </p>
#end
      <form class="form-horizontal" action="${h.url("/form/${layout.formName}/submit")}" method="post">
#foreach($group in $layout.sections)
	#showSection($group)
#end
      </form>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->

    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
    ${h.js('jquery-1.7.1.min.js')}
    ${h.js('bootstrap.min.js')}
  </body>
</html>


#macro(showSection $group)
<div class="row">
<h3>${group.title}</h3>
#if("$!{group.instructions}" != "")
	<p>${group.instructions}</p>
#end

#foreach($fieldName in $group.fields)
	#showField($fieldName)
#end

</div>
#end

#macro(showField $fieldName)
#set($field = $schema.getField($fieldName))
      	<div class="control-group">
      		<label class="control-label" for="${field.fieldName}">${field.displayName}</label>
      		<div class="controls">
      			<input class="input-xlarge" type="text" name="${field.fieldName}" id="${field.fieldName}" value="${field.defaultValue}"/>
      			<p class="help-block">${field.helpText}</p>
      		</div>
      	</div>
#end

