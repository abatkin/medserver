<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>${layout.title}</title>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
    ${h.css('bootstrap.min.css')}
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="images/favicon.ico">
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">

    <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">
  </head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">

            <span class="i-bar"></span>
            <span class="i-bar"></span>
            <span class="i-bar"></span>
          </a>
          <a class="brand" href="#">${layout.title}</a>
#if(!$layout.links.isEmpty())
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><a href="#top" id="link-main">Home</a></li>
#showTabs()
            </ul>
          </div><!--/.nav-collapse -->
#end
        </div>
      </div>
    </div>

#if(!$layout.links.isEmpty())
#showTabContent()
#end

    <div class="container" id="data-main">
      <a name="#top"></a>
      <div class="page-header">
        <h1>${layout.title}</h1>
#if("$!{layout.title}" != "")
        <p>${layout.description}</p>
#end
      </div>

<h1>${message}</h1>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->

    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
    ${h.js('jquery-1.7.1.min.js')}
    ${h.js('bootstrap.min.js')}
#if(!$layout.links.isEmpty())
#buildTabScript()
#end
  </body>
</html>

#macro(showTabs)
	#foreach($link in $layout.links)
		#if($link.linkType == "ExternalLink")
			<li><a href="${link.destinationUrl}" target="_blank">${link.displayText}</a></li>
		#else
			<li><a href="#${link.name}" id="link-${link.name}">${link.displayText}</a></li>
		#end
	#end
#end

#macro(showTabContent)
	#foreach($link in $layout.links)
		#if($link.linkType == "DataLink")
			<div class="container" id="data-${link.name}">
				<h1>${link.displayText}</h1>
				${h.raw($link.displayData)}
			</div>
		#end
	#end
#end

#macro(buildTabScript)
<script type="text/javascript">
	$(document).ready(function() {
		$("div.navbar ul.nav li a").each(function() {
		var id = $(this).attr("id");
		if (id == null) {
			return;
		}
		var result = id.match(/^link-(.+)$/);
		if (result == null) {
			return;
		}
		var linkName = result[1];
		if (linkName != 'main') {
			$("#data-" + linkName).hide();
		}

		$(this).click(function() {
			// Set link styling
			$("div.navbar ul.nav li").removeClass("active");
			$("div.navbar ul.nav li").has("a#link-" + linkName).addClass("active");

			// Make content appear/disappear
			$('div[id^="data-"]').hide();
			$("#data-" + linkName).show();
		});
	  });
	});
</script>
#end

#macro(showSection $group)
<div class="span8">
<h3>${group.title}</h3>
#if("$!{group.instructions}" != "")
	<p>${group.instructions}</p>
#end

#foreach($widget in $group.widgets)
	#showWidget($widget)
#end

</div>
#end

#macro(showWidget $widget)
#set($field = $schema.getField($widget.name))
#set($data = $result.getValue($widget.name))
      	<div class="control-group">
      		<label class="control-label" for="${field.fieldName}">${widget.title}</label>
      		<div class="controls">
      			#parse("/widgets/${widget.templateName}")
#if("$!{widget.helpText}" != "")
      			<p class="help-block">${widget.helpText}</p>
#end
      		</div>
      	</div>
#end

